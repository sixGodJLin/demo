<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoActivity">

    <SurfaceView
        android:id="@+id/surfaceView_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px500"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_main_play"
        android:layout_width="@dimen/px96"
        android:layout_height="@dimen/px96"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_start"
        app:layout_constraintBottom_toBottomOf="@id/surfaceView_main"
        app:layout_constraintEnd_toEndOf="@id/surfaceView_main"
        app:layout_constraintStart_toStartOf="@id/surfaceView_main"
        app:layout_constraintTop_toTopOf="@id/surfaceView_main" />
</android.support.constraint.ConstraintLayout>